<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <View
        android:layout_marginTop="20dp"
        android:id="@+id/container"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/rounded_orange"/>
    <ImageView
        android:layout_marginTop="20dp"
        android:id="@+id/gambar"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintStart_toStartOf="@id/container"
        app:layout_constraintEnd_toEndOf="@id/container"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/jumping_rope"/>
    <TextView
        android:id="@+id/judul"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/container"
        app:layout_constraintTop_toTopOf="@id/container"
        android:textSize="20dp"
        android:layout_marginLeft="15dp"
        android:text="Exercises with Jumping Rope"/>
    <ImageView
        android:id="@+id/calories_img"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@drawable/calories"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="@id/judul"
        app:layout_constraintTop_toBottomOf="@id/judul"/>
    <TextView
        android:id="@+id/calories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="110 kcal"
        android:layout_marginTop="-2dp"
        android:layout_marginLeft="5dp"
        app:layout_constraintStart_toEndOf="@id/calories_img"
        app:layout_constraintTop_toTopOf="@id/calories_img"/>
    <View
        android:id="@+id/line_8"
        android:layout_width="1dp"
        android:layout_height="15dp"
        app:layout_constraintStart_toEndOf="@id/calories"
        app:layout_constraintTop_toTopOf="@id/calories_img"
        android:background="@color/black"
        android:layout_marginLeft="10dp"/>
    <ImageView
        android:id="@+id/clock2"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@drawable/clock"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="2dp"
        app:layout_constraintStart_toEndOf="@id/line_8"
        app:layout_constraintTop_toTopOf="@id/calories_img"/>
    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10 min"
        android:layout_marginTop="-2dp"
        android:layout_marginLeft="5dp"
        app:layout_constraintStart_toEndOf="@id/clock2"
        app:layout_constraintTop_toTopOf="@id/calories_img"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Beginner"
        app:layout_constraintStart_toStartOf="@id/judul"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/calories_img"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/container"
        android:layout_marginTop="20dp"
        android:background="@color/gray"/>

</androidx.constraintlayout.widget.ConstraintLayout>